declare(strict_types=1);

use Magebit\Learning\Block\Product\View\ProductAttributes;
use Magento\Framework\Escaper;

/**
 * Template for displaying selected product attributes and short description.
 * @var ProductAttributes $block
 * @var Escaper $escaper
 */

$attributes = $block->getDisplayAttributes();
$shortDescription = $block->getShortDescription();
?>

<div class="product-details">
    <?php if (!empty($attributes)): ?>
        <?php foreach ($attributes as $attribute): ?>
            <div class="detail-item">
                <li>
                    <strong><?= $escaper->escapeHtml($attribute['label']) ?>:</strong>
                    <?= $escaper->escapeHtml($attribute['value']) ?>
                </li>
            </div>
        <?php endforeach; ?>
    <?php else: ?>
        <p><?= $escaper->escapeHtml(__('No additional product information available.')) ?></p>
    <?php endif; ?>

    <?php if ($shortDescription): ?>
        <div class="short_description">
            <p><?= /** @noEscape */ $shortDescription ?></p>
        </div>
    <?php endif; ?>
</div>
